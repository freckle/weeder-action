{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true,
    "removeComments": true,
    "module": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
