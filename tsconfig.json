{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true,
    "removeComments": true,
    "module": "ES2020", // The module system TypeScript will transpile src into. See: https://www.typescriptlang.org/tsconfig/#module
    "moduleResolution": "bundler", // Rules on how to find imports. We use ncc as a bundler. See: https://www.typescriptlang.org/tsconfig/#moduleResolution
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
